<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Document</title>

        <style>
            body {
                margin: 0px;
                padding: 0px;
                font-family: Arial, Helvetica, sans-serif;
            }
            .container {
                width: 80%;
                height: 100vh;
                margin: 0 auto;
                padding: 0 5px;
                /* border: 1px solid black; */
            }
            .container h2 {
                text-align: center;
                color: #555;
                margin-top: 70px;
            }
            table {
                margin: 140px auto;
                border-spacing: 30px;
            }
            th,
            td {
                text-align: center;
                border: 0.5px solid #555;
                padding: 5px 8px;
            }
            table a {
                text-decoration: none;
                color: #0052cc;
            }
        </style>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container">

            <% if (locals.userData) { %>
                <div class="table_container mt-3">
                    <table>
                        <thead>
                            <tr>
                                <th>Sr NO</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>UserName</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% userData.forEach((user,index)=> { %>
                                <tr>
                                    <td>
                                        <%= index+1 %>
                                    </td>
                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.username %>
                                    </td>
                                    <td>
                                        
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
                <% } %>
        </div>


        <%- include('./partials/script') %>
</body>

</html>